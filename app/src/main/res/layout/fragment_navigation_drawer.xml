<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.rokuan.com.calliope_helper.NavigationDrawerFragment"
    >
    <RelativeLayout
        android:id="@+id/profile_layout"
        android:padding="@dimen/drawer_profile_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_primary_color">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            app:border_width="2dp"
            app:border_color="#FFFFFF"/>
        <TextView
            android:id="@+id/profile_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_toRightOf="@+id/profile_icon"
            android:text="Profil par defaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/profile_code"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:text="default_profile"
            android:layout_toRightOf="@+id/profile_icon"
            android:layout_below="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/menu_list"
        android:layout_below="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" android:dividerHeight="0dp" />
</RelativeLayout>